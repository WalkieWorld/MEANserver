extends layout

block content
    section.container
        h1= title
        p Welcome to #{title}
        form#formSignUp.form-horizontal(action="users/", method="POST")
            section.form-group
                label(for='name', class="col-sm-2 control-label") Name
                section.col-sm-10
                    input(type='text', placeholder="Name", name="name", id="name", class="form-control")
            section.form-group
                label(for='birthday', class="col-sm-2 control-label") Birthday
                section.col-sm-10
                    input(id='birthday', type="text", placeholder="Birthday", name="birthday", class='form-control')
            section.form-group
                section.col-sm-offset-2.col-sm-10
                    button(type="submit")#btnSignUp.btn.btn-default Sign Up
    script(src='https://code.jquery.com/jquery-2.1.3.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
    script(src='/javascripts/myjs.js')